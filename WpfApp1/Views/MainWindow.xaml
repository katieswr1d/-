<Window x:Class="WpfApp1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contact Book" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Поиск контакта:" Margin="0,0,0,10"/>
            <TextBox Width="200" 
                     Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10"/>
            <Button Content="Поиск" 
                    Command="{Binding SearchCommand}" 
                    Width="100" 
                    Margin="0,0,0,10"/>
            
            <TextBlock Text="Список контактов:" Margin="0,10,0,5"/>
            <ListView ItemsSource="{Binding Contacts}" 
                      Margin="0,0,0,10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding FirstName}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding LastName}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Content="Добавить контакт" 
                    Command="{Binding AddContactCommand}" 
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>