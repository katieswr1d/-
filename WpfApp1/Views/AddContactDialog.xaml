<Window x:Class="WpfApp1.Views.AddContactDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить контакт" Height="300" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Имя:" />
        <TextBox Name="FirstNameTextBox" />
        
        <TextBlock Text="Фамилия:" />
        <TextBox Name="LastNameTextBox" />
        
        <TextBlock Text="Телефон:" />
        <TextBox Name="PhoneTextBox" />
        
        <TextBlock Text="Email:" />
        <TextBox Name="EmailTextBox" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить" Click="AddButton_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </StackPanel></Window>
