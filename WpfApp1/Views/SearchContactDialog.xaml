<Window x:Class="WpfApp1.Views.SearchContactDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Поиск контакта" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Введите имя, фамилию, телефон или email:" />
        <TextBox Name="QueryTextBox" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Поиск" Click="SearchButton_Click" Width="80" Margin="0,0,5,0"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="80"/>
        </StackPanel>
    </StackPanel></Window>
